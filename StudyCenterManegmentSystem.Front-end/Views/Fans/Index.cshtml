@using Application.Dtos.FanDtos

@model PageModel<FanDto>

<div class="container">
    <h2 class="text-center">Fans Table</h2>

    <div class="mt-4">
        <a asp-controller="Fans" asp-action="AddFan" class="btn btn-primary">Add Fan</a>
    </div>

    @if (Model.Items.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>FanName</th>
                    <th>FanDescription</th>
                    <th>Id</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fan in Model.Items)
                {
                    <tr>
                        <td>@fan.FanName</td>
                        <td>@fan.FanDescription</td>
                        <td>@fan.Id</td>
                        <td>
                            <a asp-controller="Fans" asp-action="Update" asp-route-id="@fan.Id" class="btn btn-warning">Edit</a>
                            <a asp-controller="Fans" asp-action="Delete" asp-route-id="@fan.Id" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" href="?pageNumber=@i">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <p>No fans found.</p>
    }
</div>
